{
  "files": [
    "./src/index.ts"
  ],
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "module" : "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "angular-entypo.js",
    "flatModuleId": "angular-entypo",
  }
}
